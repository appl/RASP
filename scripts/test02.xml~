<script>
    <rule>
        <condition>
            <type>input</type>
            <name>Button 1</name>
            <subtype>Button</subtype>
            <trigger>Pressed</trigger>
        </condition>
        <action>
            <type>output</type>
            <name>relais 2</name>
            <subtype>Relais</subtype>
            <state>On</state>
        </action>
        <name>Rule 1</name>
    </rule>
    <rule>
        <condition>
            <type>input</type>
            <name>Button 1</name>
            <subtype>Button</subtype>
            <trigger>Released</trigger>
        </condition>
        <action>
            <type>output</type>
            <name>relais 2</name>
            <subtype>Relais</subtype>
            <state>Off</state>
        </action>
        <name>Rule 2</name>
    </rule>
    <rule>
        <condition>
            <type>input</type>
            <name>Fader 2</name>
            <subtype>Fader</subtype>
            <trigger>bigger</trigger>
            <TriggerValue>100</TriggerValue>
        </condition>
        <action>
            <type>output</type>
            <name>relais 4</name>
            <subtype>Relais</subtype>
            <state>Toggle</state>
        </action>
        <name>Rule 3</name>
    </rule>
    <description>This is a small test script</description>
</script>
